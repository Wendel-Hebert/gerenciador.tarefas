# Criar usuário
POST http://localhost:3000/users
Content-Type: application/json

{
  "name": "John Doe",
  "email": "john@example.com",
  "password": "secret123"
}

# Listar usuários
GET http://localhost:3000/users
Accept: application/json

# Obter usuário por ID
GET http://localhost:3000/users/1
Accept: application/json

# Atualizar usuário
PUT http://localhost:3000/users/1
Content-Type: application/json

{
  "name": "Jane Doe",
  "email": "jane@example.com",
  "password": "newpass456"
}

# Deletar usuário
DELETE http://localhost:3000/users/1
Accept: application/json

------------------------------------------------------------------

# Criar categoria (associada ao usuário 1)
POST http://localhost:3000/categories
Content-Type: application/json

{
  "name": "Trabalho",
  "user_id": 1
}

# Listar categorias
GET http://localhost:3000/categories
Accept: application/json

# Obter categoria por ID
GET http://localhost:3000/categories/1
Accept: application/json

# Atualizar categoria
PUT http://localhost:3000/categories/1
Content-Type: application/json

{
  "name": "Estudos",
  "user_id": 1
}

# Deletar categoria
DELETE http://localhost:3000/categories/1
Accept: application/json

------------------------------------------------------------------

# Criar tarefa
POST http://localhost:3000/tasks
Content-Type: application/json

{
  "title": "Finalizar relatório",
  "description": "Relatório anual de desempenho",
  "status": "pending",
  "due_date": "2025-06-01",
  "user_id": 1,
  "category_id": 1
}

# Listar tarefas
GET http://localhost:3000/tasks
Accept: application/json

# Obter tarefa por ID
GET http://localhost:3000/tasks/1
Accept: application/json

# Atualizar tarefa
PUT http://localhost:3000/tasks/1
Content-Type: application/json

{
  "title": "Finalizar relatório atualizado",
  "description": "Incluindo novos dados",
  "status": "in_progress",
  "due_date": "2025-06-05",
  "user_id": 1,
  "category_id": 1
}

# Deletar tarefa
DELETE http://localhost:3000/tasks/1
Accept: application/json